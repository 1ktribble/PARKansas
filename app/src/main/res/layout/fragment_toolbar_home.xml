<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context="edu.uark.csce.parkansas.parkansas.ToolbarHomeFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <SearchView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/searchView"
            android:gravity="center"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/lotFiltersBtn"
            android:tag="lotFilters"
            android:text="Lot Filters"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/black"
            android:src="@drawable/filters"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/centerBtn"
            android:tag="centerMap"
            android:text="Center Map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/black"
            android:src="@drawable/center_map"
            android:layout_weight="1"/>
    </LinearLayout>

</FrameLayout>
