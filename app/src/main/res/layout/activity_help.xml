<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.uark.csce.parkansas.parkansas.HelpActivity"
    android:fillViewport="false">

    <RelativeLayout
        android:id="@+id/relativeOutside"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/contact_title"
            android:id="@+id/contactTitle"
            android:padding="15dp"
            android:layout_below="@+id/relativeOutside"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/contact_description"
            android:id="@+id/contactDescription"
            android:padding="15dp"
            android:layout_below="@+id/contactTitle"
            android:gravity="center_horizontal" />

    </RelativeLayout>
</ScrollView>
